<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/ic_baseline_close_24"
        android:scaleType="fitXY"
        android:background="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:gravity="center"
        android:text="Quiz"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/text_problem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:gravity="center"
        android:padding="40dp"
        android:text="아침엔 네발로 걷고 오후엔 두발로 걷고 밤엔 세발로 걷는 것은?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintVertical_bias="0.002"
        app:layout_constraintWidth_percent="0.9" />

    <LinearLayout
        android:id="@+id/layout_choice_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/text_problem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_color"/>
        <Button
            android:id="@+id/btn_choice_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:backgroundTint="@color/white"
            android:text="울랄랄"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:padding="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_choice_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/layout_choice_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_color"/>

        <Button
            android:id="@+id/btn_choice_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:autoSizeTextType="uniform"
            android:backgroundTint="@color/white"
            android:padding="20dp"
            android:text="울랄랄"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_choice_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/layout_choice_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_color"/>
        <Button
            android:id="@+id/btn_choice_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:backgroundTint="@color/white"
            android:text="울랄랄"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:padding="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_choice_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/layout_choice_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_color"/>
        <Button
            android:id="@+id/btn_choice_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:backgroundTint="@color/white"
            android:text="울랄랄"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:padding="20dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>