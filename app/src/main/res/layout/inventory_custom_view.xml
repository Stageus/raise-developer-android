<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/inventory_dialog_box_design">

    <ImageView
        android:id="@+id/inventory_custom_view_image_view"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/inventory_dialog_box_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:id="@+id/inventory_custom_view_text_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="금액"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/inventory_dialog_box_design"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/inventory_custom_view_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.9"
/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inventory_custom_view_text_view"
        android:text="200000000원"
        android:gravity="right"
        android:textColor="@color/white"
        android:textSize="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>